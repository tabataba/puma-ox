#!/bin/csh
# run-script generated by Most Mon Oct  8 11:03:59 2012
set EXP=tdlk1omg-1ps-nvg3    # Name your experiment here
unset noclobber
if ($1 != "") cd $1
rm -f puma_restart*
rm -f Abort_Message
set YEAR  = 0 
set YEARS = 5 
while ($YEAR < $YEARS)
   set YEAR = `expr $YEAR + 1`
   set DATANAME=`printf '%s.%03d' $EXP $YEAR`
   set DIAGNAME=`printf '%s_DIAG.%03d' $EXP $YEAR`
   set RESTNAME=`printf '%s_REST.%03d' $EXP $YEAR`
   mpiexec -np 8 puma.x 64 15 
   if (-e Abort_Message) exit 1
   if (-e puma_output) mv puma_output $DATANAME
   if (-e puma_diag  ) mv puma_diag   $DIAGNAME
   cp -f puma_status puma_restart
   mv -f puma_status $RESTNAME
end
